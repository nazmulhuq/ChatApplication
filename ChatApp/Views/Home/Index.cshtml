@{
    ViewBag.Title = "Chat Room";
}



<h1>S!! Chat Room</h1>
<div id="nameDiv" class="container">
    <input type="text" id="name" name="name" placeholder="Type your name">
</div>
<div class="container">
    <h4 id="allMessages" class="text-primary"></h4>
</div>

<div class="container">
    <textarea style="width:1500px" type="text" id="message" name="message"></textarea>
</div>

@section scripts{
    <script src="~/scripts/jquery.signalR-2.4.0.min.js"></script>
    <script src="~/signalr/js"></script>
    <script src="~/Scripts/chatWindow.js"></script>
}